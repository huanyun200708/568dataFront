.table {  
  border: 2px solid darkgray;  
  width: 90%;  
  margin-top: 1rem;  
  margin-right: 1rem;  
  margin-left: 1rem;  
}  
.th {  
  width: 25%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 1.2rem;  
  align-items: center;  
  border-right: 2px solid #ddd;  
}  
.th-2 {  
  width: 75%;  
  justify-content: center;  
  color: #fff;  
  display: flex;  
  height: 1.2rem;  
  align-items: center;  
   max-height:  5rem;  
  max-width: 75%;  
} 
.tr {  
  display: flex;  
  width: 100%;  
  justify-content: center;  
  /* height: 1.2rem;   */
  align-items: center;  
} 
.td {  
    width:25%;  
